{
  "builders": [
    {
      "name": "docker",
      "type": "docker",
      "image": "centos:7.6.1810",
      "commit": "true",
      "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/sh"],
      "changes": [
         "WORKDIR /usr/src/app",
         "CMD [\"python3\", \"manage.py\", \"runserver\", \"-h\", \"0.0.0.0\"]"
      ]
    }
   ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
       "yum install python -yq"
       ]
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "playbook-flask.yaml",
      "extra_arguments": [
         "-v"
       ]
    }
   ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "uav2608/flask",
      "tag":"0.0.1"
    }
   ]
}


